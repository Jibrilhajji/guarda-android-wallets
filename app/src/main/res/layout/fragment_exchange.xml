<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <Spinner
        android:id="@+id/spinnerExchange"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:spinnerMode="dropdown"
        android:background="@android:color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewExchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        tools:text="textViewExchange"
        app:layout_constraintStart_toStartOf="@id/spinnerExchange"
        app:layout_constraintBottom_toTopOf="@id/spinnerExchange"/>

    <ImageView
        android:id="@+id/imageViewAbout"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="0dp"
        android:padding="5dp"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/ic_help_icon_wr"
        app:layout_constraintStart_toEndOf="@id/textViewExchange"
        app:layout_constraintTop_toTopOf="@id/textViewExchange"
        app:layout_constraintBottom_toBottomOf="@id/textViewExchange"/>

    <TextView
        android:id="@+id/textViewSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_change"
        android:layout_marginBottom="10dp"
        tools:text="textViewSend"
        app:layout_constraintBottom_toTopOf="@id/spinnerFromCoin"
        app:layout_constraintStart_toStartOf="@id/spinnerFromCoin"/>

    <Spinner
        android:id="@+id/spinnerFromCoin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:spinnerMode="dropdown"
        android:background="@drawable/ic_exchangespinner_background_wr"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerExchange" />

    <ImageView
        android:id="@+id/img_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_exchange_small"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerFromCoin"/>

    <TextView
        android:id="@+id/textViewReceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinnerToCoin"
        android:layout_alignStart="@+id/spinnerToCoin"
        android:layout_marginBottom="10dp"
        tools:text="textViewReceive"
        app:layout_constraintBottom_toTopOf="@id/spinnerToCoin"
        app:layout_constraintStart_toStartOf="@id/spinnerToCoin"/>

    <com.guarda.ethereum.customviews.SpinnerCrutch
        android:id="@+id/spinnerToCoin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/ic_exchangespinner_background_wr"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/img_change"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/textViewExchangeRateHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            tools:text="textViewExchangeRateHeader"/>

        <TextView
            android:id="@+id/textViewExchangeRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            tools:text="textViewExchangeRate"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:paddingBottom="20dp"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/buttonStartExchange"
                style="@style/colorButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:drawableEnd="@drawable/ic_arrow_right_wr"
                android:elevation="5dp"
                android:paddingEnd="15dp"
                android:text="Start Exchange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>